  "components": {
    "schemas": {
      "TournamentDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "division": { "type": "string", "maxLength": 255, "minLength": 0 },
          "place": { "type": "integer", "format": "int32" },
          "rating": { "type": "integer", "format": "int32" },
          "prize": { "type": "number", "format": "double" },
          "score": { "type": "integer", "format": "int32" },
          "points": { "type": "number", "format": "double" },
          "event": { "type": "integer", "format": "int64" },
          "player": { "type": "integer", "format": "int64" }
        },
        "required": ["division", "event", "place", "player"]
      },
      "PlayerDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "firstname": { "type": "string", "maxLength": 255, "minLength": 0 },
          "lastname": { "type": "string", "maxLength": 255, "minLength": 0 },
          "pdgaNumber": { "type": "integer", "format": "int64" },
          "sdaNumber": { "type": "integer", "format": "int64" },
          "swisstourLicense": { "type": "boolean" },
          "isPro": { "type": "boolean" }
        },
        "required": ["swisstourLicense"]
      },
      "EventDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "eventId": { "type": "integer", "format": "int64" },
          "name": { "type": "string", "maxLength": 255, "minLength": 0 },
          "displayName": { "type": "string", "maxLength": 255, "minLength": 0 },
          "tier": { "type": "string", "maxLength": 255, "minLength": 0 },
          "year": { "type": "integer", "format": "int32" },
          "city": { "type": "string", "maxLength": 255, "minLength": 0 },
          "country": { "type": "string", "maxLength": 255, "minLength": 0 },
          "numberPlayers": { "type": "integer", "format": "int32" },
          "points": { "type": "integer", "format": "int32" },
          "purse": { "type": "number", "format": "double" },
          "infoLink": { "type": "string", "maxLength": 500, "minLength": 0 },
          "registrationLink": {
            "type": "string",
            "maxLength": 500,
            "minLength": 0
          },
          "registrationStart": { "type": "string", "format": "date" },
          "swisstourType": {
            "type": "string",
            "maxLength": 50,
            "minLength": 0
          },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "isChampionship": { "type": "boolean" },
          "isSwisstour": { "type": "boolean" },
          "hasResults": { "type": "boolean" }
        },
        "required": ["isChampionship", "isSwisstour", "points"]
      },
      "CustomUser": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "EventPointsDTO": {
        "type": "object",
        "properties": {
          "eventId": { "type": "integer", "format": "int64" },
          "points": { "type": "number", "format": "double" },
          "included": { "type": "boolean" }
        }
      },
      "StandingDTO": {
        "type": "object",
        "properties": {
          "playerId": { "type": "integer", "format": "int64" },
          "eventPoints": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/EventPointsDTO" }
          },
          "totalPoints": { "type": "number", "format": "double" },
          "rank": { "type": "integer", "format": "int32" }
        }
      },
      "PlayerEventsDTO": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "eventId": { "type": "integer", "format": "int64" },
          "name": { "type": "string" },
          "displayName": { "type": "string" },
          "tier": { "type": "string" },
          "year": { "type": "integer", "format": "int32" },
          "city": { "type": "string" },
          "country": { "type": "string" },
          "numberPlayers": { "type": "integer", "format": "int32" },
          "points": { "type": "integer", "format": "int32" },
          "purse": { "type": "number", "format": "double" },
          "isChampionship": { "type": "boolean" },
          "isSwisstour": { "type": "boolean" },
          "hasResults": { "type": "boolean" },
          "infoLink": { "type": "string" },
          "registrationLink": { "type": "string" },
          "registrationStart": { "type": "string", "format": "date" },
          "swisstourType": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "division": { "type": "string" },
          "tournamentPlace": { "type": "integer", "format": "int32" },
          "tournamentRating": { "type": "integer", "format": "int32" },
          "tournamentPrize": { "type": "number", "format": "double" },
          "tournamentScore": { "type": "integer", "format": "int32" },
          "tournamentPoints": { "type": "number", "format": "double" },
          "rounds": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/RoundDTOsmall" }
          }
        }
      },
      "RoundDTOsmall": {
        "type": "object",
        "properties": {
          "roundNumber": { "type": "integer", "format": "int32" },
          "roundRating": { "type": "integer", "format": "int32" },
          "roundScore": { "type": "integer", "format": "int32" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "Login using JWT token",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
